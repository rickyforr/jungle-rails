<h1>Register</h1>

<%= form_for :user, url: '/users' do |f| %>
<div class="form-group register" >
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
</div>
<div class="form-group register">
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  </div>
<div class="form-group register" style="margin-left:30px;">
  <%= f.label :email %>
  <input class="input-medium"<%= f.text_field :email %></input>
 </div>
 <div class="form-group register" >
   <%= f.label :password %>
   <%= f.password_field :password %>
  </div>
  <div class="form-group register" style="margin-left:15px;>
  <%= f.label :confirm %>
  <input class="input-medium"<%= f.password_field :password_confirmation %></input>
 </div>
 <div class="form-group register" style="margin-left:70px;">
  <%= f.submit "Submit" %>
  </div>
  <% if flash[:notice] %>
    <div class="notice" style="color:red;"><%= flash[:notice] %></div>
<% end %>


<% end %>